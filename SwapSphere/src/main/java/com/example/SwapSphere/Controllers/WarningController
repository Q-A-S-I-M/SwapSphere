package com.example.SwapSphere.Controllers;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.ResponseEntity;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.example.SwapSphere.Entities.Notification;
import com.example.SwapSphere.Services.NotificationService;
import com.example.SwapSphere.Entities.Report;

@RestController
@RequestMapping("/admin/warn")
public class WarningController {
    @Autowired
    private NotificationService notificationService;

    @PostMapping("/{username}")
    public ResponseEntity<Report> giveWarning(@RequestBody Report report) {
        return ResponseEntity.ok(notificationService.giveWarning(report));
    }

}